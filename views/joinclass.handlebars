                 <span class="round"><i class="fa fa-chevron-right"></i></span>
                  </button>
              </div>

            </div>
               
            
             
                 </form> 
                 </div>
                 <form method="post" action="/addjoinclass">
                          <input type="text" hidden required="required" name="sclassname"value="{{class1.classname}}"/>
                          <input type="text" hidden name="ssection"value="{{class1.section}}"/>
                          <input type="text" hidden name="scourse"value="{{class1.course}}"/>
                          <input type="text" hidden name="steacher"value="{{class1.teacher}}"/>

  {{#each active1}}
    

                     <input type="text" hidden name="username"value="{{this.susername}}"/>
                     <input type="text" hidden name="email"value="{{this.semail}}"/>

                {{/each}}
   <div class="type-1">
     <div id="myDIV">
              <div>
                 <button type="submit" href="" class="btn btn-1">
                 <span class="txt">Are you sure you want to join {{class1.classname}}</span>
                 <span class="round"><i class="fa fa-chevron-right"></i></span>
                  </button>
              </div>

            </div>
               </div>      </form>
<script>
  function myFunction() {
  var x = document.getElementById("myDIV");
      x.style.display = "none";

  if (x.style.display === "none") {
    x.style.display = "block";
  } 
}
  </script>


