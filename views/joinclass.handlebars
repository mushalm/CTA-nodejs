<legend><span class="number">1</span>Join Class</legend>

         <input type="text" name="clascode" required placeholder="enter code"/>
         <input type="text" hidden name="sclassname"value="{{class1.classname}}"/>
                 
  </fieldset>
            <div class="type-1">
              <div>
                 <button type="submit"onclick="myFunction()" href="" class="btn btn-1">
